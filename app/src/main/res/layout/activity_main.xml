<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnConfigPortZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Config Port Zero"/>

    <Button
        android:id="@+id/btnConfigPortThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Config Port Three"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"/>

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"/>


    <Button
        android:id="@+id/btnSendData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Data"/>

    <Button
        android:id="@+id/btnTarePortZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tare Port Zero"/>

    <Button
        android:id="@+id/btnTareAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tare All"/>

    <Button
        android:id="@+id/btnObservePortZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observe Port Zero"/>

</LinearLayout>